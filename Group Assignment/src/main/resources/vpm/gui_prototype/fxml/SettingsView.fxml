<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vpm.gui_prototype.controllers.SettingsController"
            style="-fx-background-color: #e0f7fa;">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Label text="Update User Details" style="-fx-font-size: 24px; -fx-text-fill: #00796B; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="15" alignment="CENTER" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 20;">
                <!-- Username Field -->
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Password Field -->
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Email Field -->
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <!-- Phone Field -->
                <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>

            <!-- Error or Success Message -->
            <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 16px; -fx-font-weight: bold;" />

            <!-- Save and Back Buttons -->
            <HBox spacing="10">
                <Button text="Save" onAction="#saveUserDetails" style="-fx-background-color: #00796B; -fx-text-fill: white;" />
                <Button text="Back" onAction="#goBack" style="-fx-background-color: #c62828; -fx-text-fill: white;" />
            </HBox>

        </VBox>
    </center>
</BorderPane>
