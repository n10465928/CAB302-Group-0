<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color:linear-gradient(to bottom right, #e0f7fa, #80deea);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vpm.gui_prototype.controllers.EditPetController">

    <!-- Title Bar -->
    <StackPane AnchorPane.topAnchor="40" AnchorPane.leftAnchor="212">
        <Rectangle width="600" height="100" arcWidth="20" arcHeight="20" fill="#00796B"/>
        <Label fx:id="petNameLabel" style="-fx-text-fill:white;  -fx-font-weight: bold;">
            <font>
                <Font size="50.0" />
            </font>
        </Label>
    </StackPane>

    <!-- Editing Section -->
    <StackPane AnchorPane.topAnchor="180" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40">
        <GridPane alignment="CENTER" hgap="20" vgap="20" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 30;">
            <Label text="Edit Pet Detail" style="-fx-font-size: 30px; -fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER" />

            <!-- Display which detail is being edited -->
            <Label fx:id="detailLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" />

            <!-- Text Field for entering new detail -->
            <TextField fx:id="detailField" style="-fx-font-size: 16px;" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <!-- Save Button -->
            <Button fx:id="saveButton" text="Save" style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20px; -fx-padding: 10 30;" onAction="#onSave" GridPane.rowIndex="2" GridPane.columnIndex="0">
                <effect>
                    <DropShadow radius="10" spread="0.15" color="#004D40" />
                </effect>
            </Button>

            <!-- Cancel Button -->
            <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20px; -fx-padding: 10 30;" onAction="#onCancel" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <effect>
                    <DropShadow radius="10" spread="0.15" color="#b71c1c" />
                </effect>
            </Button>
        </GridPane>
    </StackPane>
</AnchorPane>
