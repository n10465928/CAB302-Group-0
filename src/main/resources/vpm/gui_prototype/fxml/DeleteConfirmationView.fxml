<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="vpm.gui_prototype.controllers.DeleteConfirmationController"
      style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 15;" prefWidth="400" prefHeight="200">

    <!-- Confirmation Message Label -->
    <Label fx:id="confirmationMessage" text="Are you sure you want to delete this pet?"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #00796B;" />

    <!-- Error Message Label (optional) -->
    <Label fx:id="messageLabel" text="" style="-fx-text-fill: red; -fx-font-size: 14px; -fx-font-weight: bold;"/>

    <!-- Confirm Button -->
    <Button fx:id="confirmButton" text="Confirm"
            style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-padding: 8 24;"
            onAction="#onConfirm" />

    <!-- Cancel Button -->
    <Button fx:id="cancelButton" text="Cancel"
            style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-padding: 8 24;"
            onAction="#onCancel" />
</VBox>
